{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ruff": {
      "command": ["uv", "run", "ruff", "server"],
      "extensions": [".py", ".pyi"]
    }
  },
  "formatter": {
    "ruff": {
      "command": ["uv", "run", "ruff", "format", "$FILE"],
      "extensions": [".py", ".pyi"]
    }
  },
  "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        },
        "grep_app": {
            "type": "remote",
            "url": "https://mcp.grep.app",
            "enabled": true
        },
        "exa": {
            "type": "remote",
            "url": "https://mcp.exa.ai/mcp?tools=web_search_exa&exaApiKey=${env:EXA_API_KEY}",
            "enabled": true
        }
    },
  "permission": {
        "websearch": "allow"
  }
}
