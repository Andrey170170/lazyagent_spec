{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ruff": {
      "command": ["uv", "run", "ruff", "server"],
      "extensions": [".py", ".pyi"]
    }
  },
  "formatter": {
    "ruff": {
      "command": ["uv", "run", "ruff", "format", "$FILE"],
      "extensions": [".py", ".pyi"]
    }
  }
}
